<form id="update-products_in_stores" action="/products_in_stores" method="post">
    <h3>UPDATE PRODUCTS IN STORE:</h3>
    Product ID: <select name="product_p" id="product_selection">
        <option value="{{getProductsinStore.product_p}}" selected="">No change</option>
        {{#each getProducts}}
        <option value="{{product_id}}">{{product_id}}</option>
        {{/each}}
    </select><br>
    Store ID: <select name="store_p" id="store_selector">
        <option value="{{getProductsinStore.store_p}}" selected="">No change</option>
        {{#each getStores}}
        <option value="{{store_id}}">{{store_id}}</option>
        {{/each}}
    </select><br>
</form>
<button onclick="updateProducts_in_store({{getProductsinStore.id}})">Update</button>
